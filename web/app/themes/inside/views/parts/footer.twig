          <a class="social-link mx-1 mr-0" href="https://www.fr.ch/eikon" target="_blank"><img src="{{ theme.link }}/dist/img/cta_website.svg" alt="logo de site internet."></a>
        </div>
      </div>
      <div class="col-4 col-md-3 d-flex flex-column">
        {% for item in menu.items %}
          <a target="{{ item.target }}" href="{{ item.link }}">
            <span class="d-none d-lg-block">{{ item.title }}</span>
            <span class="d-lg-none">
              {% if item.raccourci %}
                {{ item.raccourci }}
              {% else %}
                {{ item.title }}
              {% endif %}
            </span>
          </a>
        {% endfor %}
        <a href="/credits">Crédits</a>
