        <img src="{{ theme.link }}/dist/img/logo_etatfr.svg" class="w-75 mt-4" alt="logo de l'Etat de Fribourg.">
      </div>
      <div class="col-4 col-md-3 offset-md-1">
        {{ options.adresse }}
      </div>
      <div class="col-4 col-md-3">
        <p class="mb-1">Suivez-nous sur :</p>
